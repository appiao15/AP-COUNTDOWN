    private void CalculateActionPerformed(java.awt.event.ActionEvent evt) {                                          
                // TODO add your handling code here:
        int Jan=31;
        int Feb=28;
        int Mar=31;
        int April=30;
        int May=7;
        int total=127;
        int date=0; 
       
        
        if( ((MonthTextField.getText())==1){
            date= int Jan;
        }
        else if(((MonthTextField.getText())==2)){
            date= int Feb;
        }
        else if(((MonthTextField.getText())==3)){
            date= int Mar;
        }        
        else if(((MonthTextField.getText())==4)){
            date= int April;
        }    
        else if(((MonthTextField.getText())==5)){
            date= int May;
        }
        int day= DayTextField.getText();
        
        int tempdate= (day + date);
        int official= (127-tempdate);
        
        
        DaysLeftLabel.setText(official + " Days Left ");
    }                                         

